<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>MorrowRim</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
	
				<!-- give select animals ash-resistant -->
				
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="Dagoth_BasePawn"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[@Name="MorrowRim_BaseCorprus"]</xpath>
					<value>
						<li Class="MorrowRim.ExtendedRaceProperties">
							<ashResistant>Resistant</ashResistant>
						</li>
					</value>
				</li>				
		

			</operations>
		</match>
	</Operation>
	
</Patch>

