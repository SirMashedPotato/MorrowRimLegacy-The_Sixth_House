<Defs>

	<!-- ash slaves -->
	
	<ThingDef ParentName="Dagoth_BaseMagic_Single">
		<defName>Dagoth_MagicBlast_single</defName>
		<label>kinetic blast sigil</label>
		<description>A single use weapon of unknown origin, possibly Dwemer, or something even more ancient. Creates multiple fast moving projectiles made of pure energy when activated.</description>
		<verbs>
		  <li>
			<verbClass>Verb_ShootOneUse</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_ChargeBlasterHeavy</defaultProjectile>
			<warmupTime>1.25</warmupTime>
			<range>26.9</range>
			<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
			<burstShotCount>12</burstShotCount>
			<soundCast>Shot_ChargeBlaster</soundCast>
			<soundCastTail>GunTail_Heavy</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		  </li>
		</verbs>
	</ThingDef>
	
